<div class="d-flex align-items-center">
  <div class="p-2 w-50">
    <span class="title-pages">
      <%= User.model_name.human.pluralize %>
    </span>
  </div>
  <div class="d-flex w-50 flex-row-reverse">
    <%= link_to 'New', new_user_path, class: 'btn btn-success' %>
  </div>
</div>

<div class="card mt-3 mb-3">
  <div class="card-body ">
    <table class="table table-striped table-hover">
      <thead>
      <tr>
        <th>Admin</th>
        <th>Name</th>
        <th>Email</th>
        <th class="center aligned" style="width: 5%;">Actions</th>
      </tr>
      </thead>

      <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.admin %></td>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td class="d-flex gap-3">
            <%= link_to(content_tag(:i, nil, class: 'fa fa-eye lh-base'), user, class: 'btn btn-primary', data: {tooltip: 'Show', inverted: ''}) %>
            <%= link_to content_tag(:i, nil, class: 'fa fa-edit lh-base'), edit_user_path(user) , class: 'btn btn-warning', data: {tooltip: 'Edit', inverted: ''} %>
            <%= link_to content_tag(:i, nil, class: 'fa fa-trash-alt lh-base'), user, method: :delete, data: { confirm: 'Are you sure?', tooltip: 'Destroy', inverted: '' }, class: 'btn btn-danger' %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>

