<div class="d-flex align-items-center">
  <div class="p-2 w-50">
    <h2>
      <%= Merchant.model_name.human.pluralize %>
    </h2>
  </div>
  <div class="d-flex w-50 flex-row-reverse">
    <%= link_to 'New', new_merchant_path, class: 'btn btn-success' %>
  </div>
</div>
<i class="fa fa-github"></i>

<div class="card mt-3 mb-3">
  <div class="card-body ">
    <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Address</th>
        <th class="center aligned" style="width: 5%;">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @merchants.each do |merchant| %>
        <tr>
          <td><%= merchant.name %></td>
          <td><%= merchant.address %></td>
          <td class="d-flex gap-3">
            <%= link_to content_tag(:i, nil, class: 'fa fa-eye lh-base'), merchant, class: 'btn btn-primary', data: {tooltip: 'Show', inverted: ''} %>
            <%= link_to content_tag(:i, nil, class: 'fa fa-edit lh-base'), edit_merchant_path(merchant) , class: 'btn btn-warning', data: {tooltip: 'Edit', inverted: ''} %>
            <%= link_to content_tag(:i, nil, class: 'fa fa-trash-alt lh-base'), merchant, method: :delete, data: { confirm: 'Are you sure?', tooltip: 'Destroy', inverted: '' }, class: 'btn btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>
</div>

