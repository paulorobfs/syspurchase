<p id="notice"><%= notice %></p>

<div class="d-flex align-items-center">
  <div class="p-2 w-50">
    <h2>
      <%= Merchant.model_name.human.pluralize %>
    </h2>
  </div>
  <div class="d-flex w-50 flex-row-reverse">
    <%= link_to 'New', new_merchant_path, class: 'btn btn-success' %>
  </div>
</div>

<div class="card mt-3 mb-3">
  <div class="card-body ">
    <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Address</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @merchants.each do |merchant| %>
        <tr>
          <td><%= merchant.name %></td>
          <td><%= merchant.address %></td>
          <td><%= link_to 'Show', merchant %></td>
          <td><%= link_to 'Edit', edit_merchant_path(merchant) %></td>
          <td><%= link_to 'Destroy', merchant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>
</div>