<div class="card mt-3 mb-3">
  <div class="card-body ">
    <%= form_with(model: merchant, local: true) do |form| %>
      <% if merchant.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(merchant.errors.count, "error") %> prohibited this merchant from being saved:</h2>

          <ul>
            <% merchant.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group col-sm-4 mb-3">
        <%= form.label :name, class: 'form-label' %>
        <%= form.text_field :name,class: 'form-control'   %>
      </div>
      <div class="form-group col-sm-4 mb-3">
        <%= form.label :address, class: 'form-label' %>
        <%= form.text_field :address, class: 'form-control'   %>
      </div>

      <div class="form-group mt-5 mb-3">
        <%= link_to 'Cancel', merchants_path, class: 'btn btn-danger' %>
        <%= form.submit nil, class: 'btn btn-success'%>
      </div>
    <% end %>
  </div>
</div>