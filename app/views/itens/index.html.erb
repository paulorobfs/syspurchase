<div class="d-flex align-items-center">
  <div class="p-2 w-50">
    <span class="title-pages">
      <%= Item.model_name.human.pluralize %>
    </span>
  </div>
  <% if can? :create, Item %>
    <div class="d-flex w-50 flex-row-reverse">
      <%= link_to 'New', new_iten_path, class: 'btn btn-success' %>
    </div>
  <% end %>
</div>

<div class="card mt-3 mb-3">
  <div class="card-body ">
    <table class="table table-striped table-hover">
      <thead>
      <tr>
        <th>Merchant</th>
        <th>Description</th>
        <th>Price</th>
        <th class="center aligned" style="width: 5%;">Actions</th>
      </tr>
      </thead>

      <tbody>
      <% @itens.each do |iten| %>
        <tr>
          <td><%= iten.merchant&.name %></td>
          <td><%= iten.description %></td>
          <td><%= iten.price %></td>
          <td class="d-flex gap-3">
            <%= link_to content_tag(:i, nil, class: 'fa fa-eye lh-base'), iten, class: 'btn btn-primary', title: 'Show' %>
            <%= link_to content_tag(:i, nil, class: 'fa fa-edit lh-base'), edit_iten_path(iten) , class: 'btn btn-warning', title: 'Edit' if can? :edit, Item %>
            <%= link_to content_tag(:i, nil, class: 'fa fa-trash-alt lh-base'), iten, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger', title: 'Delete' if can? :delete, Item %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>