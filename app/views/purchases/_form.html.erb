<div class="card mt-3 mb-3">
  <div class="card-body ">
    <%= form_with(model: purchase, local: true) do |form| %>
      <% if purchase.errors.any? %>
        <div id="error_explanation" class="alert alert-danger" role="alert">
          <h3><%= pluralize(purchase.errors.count, "error") %> prohibited this purchase from being saved:</h3>
          <hr>
          <ul>
            <% purchase.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="col-sm-3 mb-3">
        <%= form.label :user, class: 'form-label' %>
        <%= form.collection_select :user_id, User.all, :id, :name, {prompt: 'Select...'}, class: 'form-select' %>
      </div>

      <div class="form-group col-sm-4 mb-3">
        <%= form.label :iten,  class: 'form-label' %>
        <%= form.collection_select :iten_id, Iten.all, :id, :description, {prompt: 'Select...'}, class: 'form-select' %>
      </div>

      <div class="form-group col-sm-4 mb-3">
        <%= form.label :count,  class: 'form-label' %>
        <%= form.text_field :count,  class: 'form-control' %>
      </div>

      <div class="d-grid gap-2 d-md-flex justify-content-md-center">
        <%= link_to 'Cancel', purchases_path, class: 'btn btn-danger' %>
        <%= form.submit nil, class: 'btn btn-success'%>
      </div>
    <% end %>
  </div>
</div>